---
import BaseLayout from '../layouts/Base.astro';
import Audio from '../components/Player/Audio.astro';
import Particles from '../components/Particles.astro';

import 'lite-youtube-embed/src/lite-yt-embed.css'
---

<BaseLayout>
  <script hoist type="module">
    import 'lite-youtube-embed/src/lite-yt-embed.js';
  </script>
  <style>
    lite-youtube {
      max-width: 100% !important;
    }
    lite-youtube::before {
      display: none;
    }
    lite-youtube::after {
      display: none;
    }
  </style>
  <div class="h-full w-full relative">
    <Particles />
    <div class="text-center pt-12">
      <h1 class="text-accent font-bold text-5xl lg:text-7xl">ZZCCMXTP</h1>
      <h5 class="text-xs font-light">Le site pas officiel du tout</h5>
    </div>
    <div class="hero z-20">
      <div class="text-center hero-content flex flex-col">
        <div class="mx-10 my-10 lg:w-full lg:h-auto z-20 max-w-5xl">
          <h2 class="text-accent font-bold text-4xl lg:text-4xl">
            Oh hhé ya le clip "Adieu Les filles" avec Squeezie qui est sortie tu peux mater le clip (monté par ronare) <a class="link" href="https://squeezie.s-ib.link/AdieuLesFilles" target="_blank">ou lécouter partout</a>
          </h2>
          <br>
          <br>
          <div class="aspect-w-16 aspect-h-9 mx-auto ring-1 ring-accent ring-offset-2 ring-offset-accent-focus">
            <lite-youtube
              videoid="BTOVgWjUoDo"
            >
            <!-- Bug fix, astro add undefined if nothing is defined inside an HTML Component -->
            </lite-youtube>
          </div>
          <br>
          <h2 class="text-accent font-bold text-4xl lg:text-4xl">
            Découvrez aussi ici même le clip "Nous Y sommes" de la zzccmxtp ou écoute sur <a class="link" href="https://fanlink.to/NousYsommes" target="_blank">ton réseau musical préféré</a>
          </h2>
          <br>
          <div class="aspect-w-16 aspect-h-9 mx-auto ring-1 ring-accent ring-offset-2 ring-offset-accent-focus">
            <lite-youtube
              videoid="o5u0iyr8DT4"
            >
            <!-- Bug fix, astro add undefined if nothing is defined inside an HTML Component -->
            </lite-youtube>
          </div>
          <br>
          <h2 class="text-accent font-bold text-4xl lg:text-4xl">
            Sinon tu peux aussi mater la tracklist legendaire de la zzccmxtp
          </h2>
          <br>
          <div class="aspect-w-16 aspect-h-9 mx-auto ring-1 ring-accent ring-offset-2 ring-offset-accent-focus">
            <lite-youtube
              videoid="1sMQVpSQBks"
            >
            <!-- Bug fix, astro add undefined if nothing is defined inside an HTML Component -->
            </lite-youtube>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div>
    </div>
  <div class="divider mx-10 mt-0 h-0"></div>
  <div class="container mx-auto px-4 z-20">
    <h2 class="text-2xl lg:text-5xl text-center mb-5">Les sons extrait du jeu ZZCC™ LA LEGENDRE (<a
        class="link link-accent"
        href="https://zzcc.fr/">téléchargeable ici notamment</a>)</h2>

    <Audio />
  </div>
</BaseLayout>
