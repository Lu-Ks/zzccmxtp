---
import BaseLayout from '../layouts/Base.astro';
import Media from '../components/Player/Media.astro';
import Audio from '../components/Player/Audio.astro';
import Macrongue from '../components/Macrongue.astro';
import Particles from '../components/Particles.astro';
---

<BaseLayout>
  <Macrongue />

  <div class="h-full w-full relative">
    <Particles />
    <div class="text-center pt-12">
      <h1 class="text-accent font-bold text-5xl lg:text-7xl">ZZCCMXTP</h1>
      <h5 class="text-xs font-light">Le site pas officiel du tout</h5>
    </div>
    <div class="hero z-20">
      <div class="text-center hero-content">
        <div class="mx-10 my-10 lg:w-full lg:h-auto z-20 max-w-5xl">
          <Media url="/TRACKLIST" type="video" thumbnail="/thumbnail.webp" />
        </div>
      </div>
    </div>
  </div>
  <div class="divider mx-10 mt-0 h-0"></div>
  <div class="container mx-auto px-4 z-20">
    <h2 class="text-2xl lg:text-5xl text-center mb-5">Les sons extrait du jeu ZZCC™ LA LEGENDRE (<a
        class="link link-accent"
        href="https://zzcc.fr/">téléchargeable ici notamment</a>)</h2>

    <Audio />
  </div>
</BaseLayout>
