import Media from './Media.astro';
---

<div class="mx-auto w-full lg:w-1/2 text-center hidden lg:block">
      <p class="text-sm lg:text-base">Volume (pour pas reveiller maman)</p>
      <p>Volume actuel : <span class="text-accent" id="volume">75</span>/100</p>

      <script>
      const volume = document.getElementById('volume');
      function handleVolume(event) {
        const media = document.body.querySelectorAll('audio, video')
        volume.innerText = event.target.value;

        for (var i = 0; i < media.length; i++) {
          media[i].volume = event.target.value / 100;
        };
      }
      </script>
      <input type="range" min="0" max="100" value="75" class="range range-accent mt-2" oninput="handleVolume(event)">
    </div>

